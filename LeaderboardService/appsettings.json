{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "Enrich": [ "WithMachineName", "WithProcessId", "WithThreadId", "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/LeaderboardService/RuntimeLogs.txt"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://host.docker.internal:9200",
          "indexFormat": "Serilog-LeaderboardService-{0:yyyy.MM.dd}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "LeaderboardDB":  "Server=host.docker.internal;Port=3307;database=leaderboard;user=user;password=password;",
    "AuthenticationService": "http://10.41.4.88:42420/api/Users/Check"
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:42430"
      }
    }
  }
}

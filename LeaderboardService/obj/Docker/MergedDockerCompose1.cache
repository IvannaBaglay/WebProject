services:
  database:
    environment:
      MYSQL_DATABASE: leaderboard
      MYSQL_PASSWORD: password
      MYSQL_ROOT_PASSWORD: root
      MYSQL_USER: user
    image: mysql:latest
    ports:
    - published: 3307
      target: 3306
    restart: always
    volumes:
    - dbdata:/var/lib/mysql:rw
  leaderboardservice:
    build:
      context: C:\Users\Пользователь\Desktop\лаб\Web\LeaderboardService
      dockerfile: Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: leaderboardservice
    ports:
    - published: 42430
      target: 42430
    volumes:
    - C:\Users\Пользователь\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Пользователь\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'
volumes:
  dbdata: {}